<?xml version="1.0"?>
<ruleset name="Ink Context Blog">
	<description>WordPress Coding Standards for Ink Context Blog Theme</description>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>*.min.css</exclude-pattern>

	<!-- Use WordPress coding standards -->
	<rule ref="WordPress">
		<!-- Exclude specific rules if needed -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase" />
	</rule>

	<!-- Use WordPress documentation standards -->
	<rule ref="WordPress-Docs" />

	<!-- Use WordPress extra standards -->
	<rule ref="WordPress-Extra" />

	<!-- Text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="ink-context-blog" />
		</properties>
	</rule>

	<!-- Minimum PHP version -->
	<config name="minimum_supported_version" value="5.6" />

	<!-- Show progress -->
	<arg value="p" />

	<!-- Show sniff codes -->
	<arg value="s" />

	<!-- Use colors -->
	<arg name="colors" />

	<!-- Parallel processing -->
	<arg name="parallel" value="8" />

	<!-- Report format -->
	<arg name="report" value="full" />
	<arg name="report" value="summary" />
</ruleset>

